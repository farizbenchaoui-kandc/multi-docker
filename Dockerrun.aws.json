{
    "AWSEBDockerrunVersion": 2,
    "containerDefitions": [
        {
            "name": "client",
            "image": "farizbenchaoui/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "farizbenchaoui/multi-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "farizbenchaoui/multi-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "farizbenchaoui/multi-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMapping":[
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client","server"]

        }
    ]

}